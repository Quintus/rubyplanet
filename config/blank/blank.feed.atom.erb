<%=
require "rss"
RSS::Maker.make("atom") do |atom|
  atom.channel.author = "Ruby-Community"
  atom.channel.updated = Time.now.to_s
  atom.channel.about = "http://planet.ruby-portal.de"
  atom.channel.link = "http://planet.ruby-portal.de"
  atom.channel.title = site.title
  atom.channel.subtitle = "Planet fÃ¼r Blogs der deutschsprachigen Ruby-Community"

  site.items.latest.each do |item|
    atom.items.new_item do |entry|
      entry.content.content = item.content || item.summary
      entry.content.type = "html"
      #entry.summary = item.summary if item.summary

      entry.link    = item.url
      entry.title   = item.title
      entry.author  = item.feed.title
      entry.updated = item.published.to_s
    end
  end
end
%>
